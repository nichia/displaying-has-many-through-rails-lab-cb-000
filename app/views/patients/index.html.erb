<h1>Patients</h1>

<ul>
  <% @patients.each do |patient| %>
    <li> Name: <%= link_to patient.name, patient_path(patient) %> Number of <%= "Appointment".pluralize(patient.appointments.count) %>: <%= patient.appointments.count %>
    </li>
  <% end %>
</ul>
