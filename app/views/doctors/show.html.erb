<!-- # app/views/doctors/show.html.erb -->

<h1>Dr <%= @doctor.name %></h1>

<p>Department: <%= @doctor.department %></p>
<p>Appointments:</p>
<ul>
  <% @doctor.appointments.each do |appt| %>
    <li>
      <%= link_to appt.patient.name, patient_path(appt.patient) %>
      <%= link_to appt.appointment_datetime.strftime("%B %-d, %Y at %k:%M"), appointment_path(appt) %>
    </li>
  <% end %>
</ul>
