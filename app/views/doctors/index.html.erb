<!-- # app/views/doctors/index.html.erb -->

<h1>Doctors</h1>

<ul>
  <% @doctors.each do |doctor| %>
    <li>
      <%= link_to doctor.name, doctor_path(doctor) %>
      <%= doctor.department %>, <%= doctor.patients_count %> <%= "patient".pluralize(doctor.patients_count) %>
    </li>
  <% end %>
</ul>
